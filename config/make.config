#Automatically generated by configure
#compilers and linkers

#config name
LABEL=icc

#compilers
ifdef DEBUG
    OMPC=icc -I${HOME}/inst/argobots/dbg/include
    OMPLINK=icc -labt -L${HOME}/inst/argobots/dbg/lib
else
    OMPC=icc -I${HOME}/inst/argobots/opt/include
    OMPLINK=icc -labt -L${HOME}/inst/argobots/opt/lib
endif
CC=icc
CLINK=icc

#compiler and linker flags

ifeq (${MIC}, true)
    ARCH=-xMIC-AVX512
else
    ARCH=-xHOST
endif

ifeq (${DEBUG}, true)
    OPT_FLAGS=${ARCH} -g3 -O0
else ifeq (${DEBUG}, opt)
    OPT_FLAGS=${ARCH} -g3 -O2
else
    OPT_FLAGS=${ARCH} -O3 -ipo
endif

CC_FLAGS=-std=c11
OMPC_FLAGS=-std=c11
OMPC_FINAL_FLAGS=

CLINK_FLAGS=
OMPLINK_FLAGS=
