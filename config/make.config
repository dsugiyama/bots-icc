#Automatically generated by configure
#compilers and linkers

ifeq ($(CC), icc)
    OMP_SWITCH = -qopenmp
    CODEGEN_MIC = -xMIC-AVX512
    CODEGEN_HOST = -xHOST
    IPO_SWITCH = -ipo
else ifeq($(CC), gcc)
    OMP_SWITCH = -fopenmp
    CODEGEN_MIC = -mavx512f -mavx512cd -mavx512er -mavx512pf
    CODEGEN_HOST = -march=native
    IPO_SWITCH = -flto
endif

#config name
LABEL=$(CC)

#compilers
OMPC=$(CC) $(OMP_SWITCH)
OMPLINK=$(OMPC)
CLINK=$(CC)

#compiler and linker flags

ifeq (${MIC}, true)
    ARCH=$(CODEGEN_MIC)
else
    ARCH=$(CODEGEN_HOST)
endif

ifeq (${DEBUG}, true)
    OPT_FLAGS=${ARCH} -g
else
    OPT_FLAGS=${ARCH} -O3 $(IPO_SWITCH)
endif

CC_FLAGS=-std=c11
OMPC_FLAGS=-std=c11
OMPC_FINAL_FLAGS=

CLINK_FLAGS=
OMPLINK_FLAGS=
